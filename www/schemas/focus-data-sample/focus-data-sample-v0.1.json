{
	"$schema": "http://json-schema.org/schema#",
	"id": "http://reference.focusnet.eu/schemas/focus-data-sample/v0.1",
	"title": "FOCUS data sample container",
	"description": "This object defines the basic structure for storing a flat data array.",
	"allOf": [
			{
				"$ref": "http://reference.focusnet.eu/schemas/focus-object/v0.1#/definitions/metadata"
			},
			{
				"$ref": "#/definitions/content"
			}
	],
	
	"definitions": {
		"content": {
			"type": "object",
			"properties": {
				"data": {
					"type": "object",
					"patternProperties": {
						"^[a-z][a-zA-Z0-9_-]+$": {
							"$ref": "http://reference.focusnet.eu/schemas/focus-object/v0.1#/definitions/types/any"
						}
					},
					"minProperties": 1,
					"additionalProperties": false
				}
			},
			"required": ["data"]
		},
		
		"data-acquisition": {
			"anyOf": [
				{
					"type": "string", 
					"format": "uri"
				},
				{
					"$ref": "http://reference.focusnet.eu/schemas/focus-object/v0.1#/definitions/types/any"
				},
				{
					"$ref": "#/definitions/contextual-uri" 
				}
			]
		},
		
		"data-acquisition-level-2": {
			"__comment": "No contextual (iterative) string retrieval at this step",
			"anyOf": [
				{
					"type": "string", 
					"format": "uri"
				},
				{
					"$ref": "http://reference.focusnet.eu/schemas/focus-object/v0.1#/definitions/types/any"
				}
			]
		},
		
		"contextual-string": {
			"oneOf": [
				{
					"type": "object",
				
					"properties": {
						"template": {
							"type": "string"
						},
						"placeholders": {
							"type": "object",
							"patternProperties": {
								"^[a-z][a-zA-Z0-9_-]+$": {
									"$ref": "#/definitions/data-acquisition-level-2"
								}
							},
							"minProperties": 1,
							"additionalProperties": false
						}
					},
					"required": ["template", "placeholders"],
					"additionalProperties": false
				},
				{
					"type": "string"
				}
			]
		},
		
		
		"contextual-uri": {
			"oneOf": [
				{
					"type": "object",
				
					"properties": {
						"template": {
							"type": "string"
						},
						"placeholders": {
							"type": "object",
							"patternProperties": {
								"^[a-z][a-zA-Z0-9_-]+$": {
									"$ref": "#/definitions/data-acquisition-level-2"
								}
							},
							"minProperties": 1,
							"additionalProperties": false
						}
					},
					"required": ["template", "placeholders"],
					"additionalProperties": false
				},
				{
					"type": "string",
					"format": "uri"
				}
			]
		}
		
		
	}
}