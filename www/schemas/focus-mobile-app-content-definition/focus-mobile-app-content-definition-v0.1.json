{
	"$schema": "http://json-schema.org/schema#",
	"id": "http://reference.focusnet.eu/schemas/focus-mobile-app-content-definition/v0.2",
	"title": "FOCUS Mobile application - Content definition",
	"description": "Content definition of the mobile application",
	"allOf": [
			{
				"$ref": "http://reference.focusnet.eu/schemas/focus-object/v0.1#/definitions/metadata"
			},
			{
				"$ref": "#/definitions/app-content"
			}
	],
	"definitions": {

		"app-content": {
			"type": "object",
			"properties": {
				
				"projects": {
					"type": "array",
					"items": [ { "$ref": "#/definitions/welcome-project" } ],
					"minItems": 1,
					"additionalItems": { "$ref": "#/definitions/project"} 
				}
				
			},
			"required": ["projects"]
		},
		
		"project-common": {
			"type": "object",
			"properties": {
				"guid": {
					"type": "string"
				},
				"iterator": {
					"type": ["null", "string"]
				},
				"title": {
					"$ref": "http://reference.focusnet.eu/schemas/focus-data-sample/v0.1#/definitions/contextual-string"
				},
				"description": {
					"$ref": "http://reference.focusnet.eu/schemas/focus-data-sample/v0.1#/definitions/contextual-string"
				},
				"order": {
					"type": "integer"
				},
				"widgets": {
					"type": "array",
					"items": {
						"$ref": "#/definitions/widget/any"
					},
					"minItems": 1
				},
				"pages": {
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"guid": {
								"$ref": "http://reference.focusnet.eu/schemas/focus-object/v0.1#/definitions/types/identifier"
							},
							"title": {
								"$ref": "http://reference.focusnet.eu/schemas/focus-data-sample/v0.1#/definitions/contextual-string"
							},
							"description": {
								"$ref": "http://reference.focusnet.eu/schemas/focus-data-sample/v0.1#/definitions/contextual-string"
							},
							"widgets": {
								"type": "array",
								"items": {
									"$ref": "#/definitions/widget-reference"
								},
								"minItems": 1
							}
						},
						"required": ["guid", "title", "widgets"]
					},
					"minItems": 1
				},
				"dashboards": {
					"type": "array",
					"items": {
						"$ref": "#/definitions/page-reference"
					},
					"minItems": 1
				},
				"tools": {
					"type": "array",
					"items": {
						"$ref": "#/definitions/page-reference"
					},
					"minItems": 1
				},
				"notifications": {
					"type": "array",
					"FIXME___items": {
						"$___FIXMEref___FIXME": "#/definitions/page-reference"
					},
					"minItems": 1
				}				
			},
			"required": ["guid", "title"],
			"additionalProperties": false
		},
		
		"welcome-project": {
			"allOf": [
				{
					"$ref": "#/definitions/project-common"
				},
				{
					"type": "object",
					"properties": {
						"guid": {
							"type": "string",
							"enum": ["__welcome__"]
						},
						"iterator": {
							"type": "null"
						}
					},
					"required": ["guid"]
				}
			]
		},
		
		"project": {
			"allOf": [
				{
					"$ref": "#/definitions/project-common"
				},
				{
					"type": "object",
					"properties": {
						"guid": {
							"$ref": "http://reference.focusnet.eu/schemas/focus-object/v0.1#/definitions/types/identifier"
						},
						"iterator": {
							"$ref": "http://reference.focusnet.eu/schemas/focus-data-sample/v0.1#/definitions/data-acquisition"
						}
					},
					"required": ["guid"]
				}
			]
		},
		
		
		"widget": {
			
			"any": {
				"anyOf": [
					{
						"$ref": "#/definitions/widget/common"
					}
				]
			},
			
			"common": {
				"type": "object",
				"properties": {
					
					"guid": {
						"$ref": "http://reference.focusnet.eu/schemas/focus-object/v0.1#/definitions/types/identifier"
					},
					
					"type": {
						"type": "string"
					},
					
					"FIXMEiterator": {},

					"params": {
						"type": "object",
						"patternProperties": {
							"^[a-z][a-zA-Z0-9_-]+$": {
								"$ref": "http://reference.focusnet.eu/schemas/focus-data-sample/v0.1#/definitions/data-acquisition"
							}
						},
						"minProperties": 1,
						"additionalProperties": false
					}
				},
				"required": ["guid", "type"]
			},
			
			"visualize": {},
			"collect": {}
			
		},
		
		"page-reference": {
			"type": "object",
			"properties": {
				"pageid": {
					"$ref": "http://reference.focusnet.eu/schemas/focus-object/v0.1#/definitions/types/identifier"
				},
				"order": {
					"type": "integer"
				}
			},
			"required": ["pageid"]
		},
		
		"widget-reference": {
			"type": "object",
			"properties": {
				"widgetid": {
					"$ref": "http://reference.focusnet.eu/schemas/focus-object/v0.1#/definitions/types/identifier"
				},
				"order": {
					"type": "integer"
				},
				"layout": {
					"type": "object",
					"properties": {
						"width": {
							"type": "string",
							"enum": ["1of4", "2of4", "3of4", "4of4"],
							"default": "4of4"
						}
					}
				}
			},
			"required": ["widgetid"]
		}
		
		
	}
}
